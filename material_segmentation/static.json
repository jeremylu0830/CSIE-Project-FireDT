{
  "version": "1.0.0",
  "description": "Indoor Fire Simulator 靜態資料表，用於定義各物件在 FDS 中的生成模板與驗證規則。",
  "object_templates": {
    "chair": {
      "default_dimensions": {
        "seat_width": 0.5,
        "seat_half_width": 0.25,
        "seat_depth": 0.5,
        "seat_half_depth": 0.25,
        "seat_height": 0.1,
        "backrest_width": 0.5,
        "backrest_half_width": 0.25,
        "backrest_depth": 0.1,
        "backrest_half_depth": 0.05,
        "backrest_height": 0.5,
        "leg_length": 0.45
      },
      "components": {
        "seat": {
          "position_offset": [0, 0, 0],
          "dimensions": {
            "width": 0.5,
            "depth": 0.5,
            "height": 0.1
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='upholstery' /"
        },
        "backrest": {
          "position_offset": [0, -0.25, 0.1],
          "dimensions": {
            "width": 0.5,
            "depth": 0.1,
            "height": 0.5
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='upholstery' /"
        },
        "legs": {
          "position_offsets": [
            [-0.25, -0.25, 0],
            [-0.25, 0.25, 0],
            [0.25, -0.25, 0],
            [0.25, 0.25, 0]
          ],
          "dimensions": {
            "width": 0.1,
            "depth": 0.1,
            "height": -0.45
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='metal' /"
        }
      }
    },
    "dining table": {
      "default_dimensions": {
        "top_length": 0.6,
        "top_half_length": 0.3,
        "top_width": 0.6,
        "top_half_width": 0.3,
        "top_height": 0.75
      },
      "components": {
        "top": {
          "position_offset": [0, 0, 0],
          "dimensions": {
            "width": 0.6,
            "depth": 0.6,
            "height": 0.05
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='plastic' /"
        },
        "legs": {
          "position_offsets": [
            [-0.25, -0.25, 0],
            [-0.25, 0.25, 0],
            [0.25, -0.25, 0],
            [0.25, 0.25, 0]
          ],
          "dimensions": {
            "width": 0.05,
            "depth": 0.05,
            "height": -0.70
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='wood' /"
        }
      }
    },
    "couch": {
      "default_dimensions": {
        "seat_length": 2.0,
        "seat_half_length": 1.0,
        "seat_depth": 0.8,
        "seat_half_depth": 0.4,
        "seat_height": 0.2,
        "backrest_height": 0.8,
        "backrest_thickness": 0.2,
        "backrest_half_thickness": 0.1,
        "armrest_height": 0.6,
        "armrest_thickness": 0.2,
        "armrest_half_thickness": 0.1,
        "leg_height": 0.2
      },
      "components": {
        "seat": {
          "position_offset": [0, 0, 0],
          "dimensions": {
            "width": 2.0,
            "depth": 0.8,
            "height": 0.2
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='upholstery' /"
        },
        "backrest": {
          "position_offset": [0, -0.3, 0.2],
          "dimensions": {
            "width": 2.0,
            "depth": 0.2,
            "height": 0.8
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='upholstery' /"
        },
        "armrests": {
          "position_offsets": [
            [-0.9, 0, 0.2],
            [0.9, 0, 0.2]
          ],
          "dimensions": {
            "width": 0.2,
            "depth": 0.8,
            "height": 0.6
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='upholstery' /"
        },
        "legs": {
          "position_offsets": [
            [-0.9, -0.3, 0],
            [-0.9, 0.3, 0],
            [0.9, -0.3, 0],
            [0.9, 0.3, 0]
          ],
          "dimensions": {
            "width": 0.1,
            "depth": 0.1,
            "height": -0.2
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='wood' /"
        }
      }
    },
    "tv": {
      "default_dimensions": {
        "screen_width": 1.2,
        "screen_half_width": 0.6,
        "screen_height": 0.7,
        "screen_thickness": 0.05,
        "screen_half_thickness": 0.025,
        "stand_width": 0.3,
        "stand_half_width": 0.15,
        "stand_depth": 0.2,
        "stand_half_depth": 0.1,
        "stand_height": 0.1
      },
      "components": {
        "screen": {
          "position_offset": [0, 0, 0],
          "dimensions": {
            "width": 1.2,
            "depth": 0.05,
            "height": 0.7
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='glass' /"
        },
        "stand": {
          "position_offset": [0, 0, -0.1],
          "dimensions": {
            "width": 0.3,
            "depth": 0.2,
            "height": -0.1
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='metal' /"
        }
      }
    },
    "suitcase": {
      "default_dimensions": {
        "length": 0.5,
        "half_length": 0.25,
        "width": 0.2,
        "half_width": 0.1,
        "height": 0.3
      },
      "components": {
        "body": {
          "position_offset": [0, 0, 0],
          "dimensions": {
            "width": 0.5,
            "depth": 0.2,
            "height": 0.3
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='plastic' /"
        }
      }
    }
  }
}
